pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC721/extensions/ERC721.sol";
import "@openzeppelin/contracts/utils/Base64.sol";

contract OnChainSoundNFT is ERC721 {
    constructor() ERC721("OnChainSoundNFT", "OCS") {
        _mint(msg.sender, 1);
    }

    function tokenURI(uint256) public pure override returns (string memory) {
        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        '{"name":"OnChain Sound NFT",',
                        '"description":"A minimal 1/1 NFT with sound",',
                        '"animation_url":"ipfs://QmYourSoundFile.mp3",',
                        '"image":"ipfs://QmYourImage.png"}'
                    )
                )
            )
        );
        return string(abi.encodePacked("data:application/json;base64,", json));
    }
}
